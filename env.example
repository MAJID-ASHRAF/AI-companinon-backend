# Server
PORT=3000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/ai_assistant
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_assistant
DB_USER=user
DB_PASSWORD=password

